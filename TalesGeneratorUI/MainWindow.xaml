<ribbon:RibbonWindow x:Class="TalesGeneratorUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:ribbon="clr-namespace:Microsoft.Windows.Controls.Ribbon;assembly=RibbonControlsLibrary"
		Title="MainWindow" Height="600" Width="800"
		ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
	
	<Window.CommandBindings>
		<CommandBinding Command="New"/>
		<CommandBinding Command="Open"/>
	</Window.CommandBindings>
	
	<Grid x:Name="LayoutGrid">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="306*"/>
		</Grid.RowDefinitions>
		<!--Ribbon-->
		<ribbon:Ribbon x:Name="Ribbon" Grid.Row="0">
			<!--Main Menu-->
			<ribbon:Ribbon.ApplicationMenu>
				<ribbon:RibbonApplicationMenu>
					<ribbon:RibbonApplicationMenuItem Header="New"
													  Command="New"/>
					<ribbon:RibbonApplicationMenuItem Header="Open"
													  Command="Open"/>
				</ribbon:RibbonApplicationMenu>
			</ribbon:Ribbon.ApplicationMenu>
			<!--Tab Main-->
			<ribbon:RibbonTab x:Name="TabMain"
							  Header="Главная">
				<ribbon:RibbonGroup Header="Test">
					<ribbon:RibbonButton x:Name="ButtonTest"
										 Label="Test"/>
				</ribbon:RibbonGroup>
			</ribbon:RibbonTab>
		</ribbon:Ribbon>
		<!--Content-->
	</Grid>
</ribbon:RibbonWindow>
